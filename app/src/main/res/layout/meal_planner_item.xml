<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mealPlannerItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="sdfsd sdf ds fsd f"
            cardView:layout_constraintLeft_toLeftOf="parent"
            cardView:layout_constraintRight_toLeftOf="@+id/tvMeal"
            cardView:layout_constraintHorizontal_weight="3"/>

        <TextView
            android:id="@+id/tvMeal"
            android:layout_width="0dp"
            android:text="sdfds sdf ds fds f"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textAlignment="textEnd"
            cardView:layout_constraintLeft_toRightOf="@+id/tvDay"
            cardView:layout_constraintRight_toRightOf="parent"
            cardView:layout_constraintHorizontal_weight="7"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>